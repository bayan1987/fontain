<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.scopely.fontain.example.Main">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Bold"
            app:font_weight="BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Bold Italic"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Italic"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Narrow"
            app:font_width="NARROW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Narrow Bold"
            app:font_width="NARROW"
            app:font_weight="BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Wide"
            app:font_width="WIDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="PT Sans Wide Bold"
            app:font_width="WIDE"
            app:font_weight="BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="LS Regular"
            app:font_family="LS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="LS Bold"
            app:font_family="LS"
            app:font_weight="BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="LS Light"
            app:font_family="LS"
            app:font_weight="LIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="LS Medium"
            app:font_family="LS"
            app:font_weight="MEDIUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="LS Ultra Light"
            app:font_family="LS"
            app:font_weight="HAIRLINE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="Medieval Sharp Regular"
            app:font_family="MedievalSharp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="Medieval Sharp Bold"
            app:font_family="MedievalSharp"
            app:font_weight="BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="Medieval Sharp Bold Italic"
            app:font_family="MedievalSharp"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="Medieval Sharp Italic"
            app:font_family="MedievalSharp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="Droid Sans"
            app:font_family="@string/fontain_system_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="Droid Sans Italic"
            app:font_family="@string/fontain_system_default"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="Droid Sans Bold"
            app:font_family="@string/fontain_system_default"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:text="Droid Sans Bold Italic"
            app:font_family="@string/fontain_system_default"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.scopely.fontain.views.FontTextView
            android:text="caps mode: sentences"
            app:caps_mode="sentences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="caps mode: words"
            app:caps_mode="words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="caps mode: a mode of title"
            app:caps_mode="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.scopely.fontain.views.FontTextView
            android:text="caps mode: characters"
            app:caps_mode="characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.scopely.fontain.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spannedTextView"
            android:text="@string/three_different_fontspans"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <com.scopely.fontain.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predicate driven:"/>
            <LinearLayout
                android:id="@+id/predicateContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="No"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Yes"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="No"
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background"
            android:orientation="vertical">
            <com.scopely.fontain.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Changing Font Families:"/>
            <LinearLayout
                android:id="@+id/textViewContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="TextView Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="TextView Italic"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="TextView Bold"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="TextView Bold Italic"
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background"
            android:orientation="vertical">
            <com.scopely.fontain.views.FontEditText
                android:hint="Input"
                app:font_family="MedievalSharp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.scopely.fontain.views.FontEditText
                android:hint="Password"
                app:font_family="LS"
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
